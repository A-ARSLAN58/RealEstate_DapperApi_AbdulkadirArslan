@model UpdatePopularLocationDto
@{
    ViewData["Title"] = "UpdatePopularLocation";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Update New Location</h6>

                <form method="post">
                    <input type="hidden" asp-for="LocationID" />
                    <label>City Name : </label>
                    <input type="text" asp-for="CityName" class="form-control" />
                    <br />
                    <label>ImageUrl : </label>
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Update Location</button>
                </form>

            </div>
        </div>
    </div>
</div>

