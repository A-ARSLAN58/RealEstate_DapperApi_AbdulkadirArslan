@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Create New Product</h6>

                <form method="post">
                    <label>Product Title : </label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <br />
                    <label>City : </label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <br />
                    <label>District : </label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <br />
                    <label>Category : </label>
                    @Html.DropDownListFor(x=>x.categoryid,(List<SelectListItem>)ViewBag.CategoryValues,new {@class="form-control"})
                    <br />
                    <br />
                    <label>Price : </label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <br />
                    <label>Type : </label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <br />
                    <label>Cover Image : </label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <br />
                    <label>Address : </label>
                    <textarea asp-for="address" class="form-control" rows="5"></textarea>
                    <br />
                    <br />
                    <button class="btn btn-primary">Save Product</button>
                </form>




            </div>
        </div>
    </div>
</div>

