@model CreateBottomGridDto

@{
    ViewData["Title"] = "CreateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Create New Employee</h6>

                <form method="post">
                    <label>Icon: </label>
                    <input type="text" asp-for="Icon" class="form-control" />
                    <br />
                    <label>Title : </label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Image : </label>
                    <input type="text" asp-for="Description" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Save BottomGrid</button>
                </form>

            </div>
        </div>
    </div>
</div>

